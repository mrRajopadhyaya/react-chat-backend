{
  "compilerOptions": {
    "target": "es5",                                
    "rootDir":"./src",
    "module": "commonjs", 
    "lib":["es6"],
    "allowJs": true, 
    "outDir":"./build",                               
    "sourceMap": true,                           
    "strict": false,                                 
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/types/*"
    ]
    },                                              
    "esModuleInterop": true,                        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
